                            src="{{ mobile_banner_left | img_url: 'master' }}"
                            alt="{{ mobile_banner_left.alt | escape }}"
                            loading="lazy"
                            class="full-width-banner mobile-media"
                          >
                        {% endif %}
                        
                        {% if banner_link_left != blank %}
                          </a>
                        {% endif %}
                        
                        <!-- Left Banner Overlay -->
